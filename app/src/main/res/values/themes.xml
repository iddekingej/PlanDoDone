<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanDoDone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/controlFront</item>
        <item name="colorPrimaryVariant">@color/controlFront</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/baseTextView</item>
        <item name="listStyle">@style/listViewStyle</item>
    </style>

    <style name="title" parent="baseTextView">
        <item name="android:background">@color/gen_title_background</item>
        <item name="android:textColor">@color/gen_title_text_color</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="baseTextView" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:textColor">@color/gen_text_color</item>
    </style>

    <style name="projectNameTitle" parent="baseTextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="formLabel" parent="baseTextView">
        <item name='android:textStyle'>bold</item>

    </style>


    <style name="buttonStyle" parent="android:Widget.Material.Button">
        <item name="android:backgroundTint">@drawable/button_background</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="listViewItemStyle" parent="baseTextView">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="listViewStyle">
        <item name="android:background">@color/list_background</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>