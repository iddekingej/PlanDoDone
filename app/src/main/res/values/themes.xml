<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanDoDone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/controlFront</item>
        <item name="colorPrimaryVariant">@color/controlFront</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/baseTextView</item>

    </style>


    <style name="baseTextView" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="projectNameTitle" parent="baseTextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>